extends include/page.pug

block title
  title 控制台管理

block content
  div.card#card1
    button.btn.btn-primary.disabled#btnStart(type="button") 开始
    button.btn.btn-danger#btnClear(type="button") 清除
  div.card#card2
    ul#ulList

block css
  style.
    #card1 {
      position: fixed;
      width: 100%;
      left: 0;
    }
    #card2 {
      margin: 0px 0 10px 0;
      background: black;
      color: wheat;
      padding-top: 10px;
      font-size: 16px;
    }
    #ulList {
      list-style: none;
      min-height: 100px;
      word-break: break-word;
    }
    #ulList li::before {
      content: "# api-mock > "; 
      display: inline-block; 
      margin-left: -24px;
      width: 97px;
    }
    #btnClear {
      position: absolute;
      top: 5px;
      right: 395px;
    }

block js
  script(type="text/javascript",src=mock.uri("plugin/socket.io-2.1.1/socket.io.js", true))
  script(type="text/javascript",src=mock.uri("js/socket.js?v=2", true))
  script(type="text/javascript").
    $(function(){
      new MySocket("#{host}", "#{port}");
    });


